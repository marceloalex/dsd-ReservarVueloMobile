<h1>Listing seats</h1>

<table>
  <tr>
    <th>Numero</th>
    <th>Posicion</th>
    <th>Vuelo</th>
    <th>Estado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @seats.each do |seat| %>
  <tr>
    <td><%= seat.numero %></td>
    <td><%= seat.posicion %></td>
    <td><%= seat.vuelo %></td>
    <td><%= seat.estado %></td>
    <td><%= link_to 'Show', seat %></td>
    <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
    <td><%= link_to 'Destroy', seat, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

